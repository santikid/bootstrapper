{
  "source": "./",
  "target": "~/",
  "ignore": [".git"],
  "features": [
    {
      "name": "Features for macOS",
      "slug": "macos",
      "enabled_command": "[[ $OSTYPE == 'darwin'* ]]"
    },
    {
      "name": "Features for Linux",
      "slug": "linux",
      "enabled_command": "[[ $OSTYPE == 'linux'* ]]"
    },
    {
      "name": "Linux features in /opt/",
      "slug": "opt",
      "enabled_command": "[[ $OSTYPE == 'linux'* ]]",
      "target": "/opt/"
    }
  ]
}
